fetch('https://dummyjson.com/image/300')


export async function apiGetNews() {
    const response = await fetch("https://dummyjson.com/posts");

    const news = await response.json();
    
    return news.news;
}

export async function apiGetPlaceholderImage(newsImage) {
    const response = await fetch ("https://dummyjson.com/image/250x150");

    const newsImg = await response.json();

    return newsImg;
}

export async function apiGetDateForNews(newsDate) {
    const response = await fetch ("https://dummyjson.com/users/" + newsDate);

    const newsPost = await response.json();

    return newsPost;
}